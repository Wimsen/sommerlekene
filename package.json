{
  "name": "sommerlekene",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "conc \"next dev\" \"graphql-codegen --watch\" -c \"yellow,blue\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "eslint src --fix && yarn format",
    "lint:strict": "eslint --max-warnings=0 src",
    "typecheck": "tsc --noEmit --incremental false",
    "test:watch": "jest --watch",
    "test": "jest",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "postbuild": "next-sitemap --config next-sitemap.config.js",
    "prepare": "husky install",
    "console": "npx hasura console --envfile \"../.env.development\" --project hasura",
    "backend": "docker-compose up --detach && wait-on http-get://localhost:8090/healthz",
    "backend:clean": "docker-compose down --volumes",
    "backend:stop": "docker-compose down",
    "backend:migrations": "cd hasura && hasura metadata apply --envfile \"../.env.development\" && hasura migrate apply --database-name default --envfile \"../.env.development\" && hasura metadata reload --envfile \"../.env.development\"",
    "backend:reset": "npm run backend:clean && npm run backend && npm run backend:migrations",
    "production:upload": "./scripts/upload-docker-image.sh",
    "production:deploy": "./scripts/deploy-docker-image.sh",
    "codegen": "graphql-codegen"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "graphql": "^16.6.0",
    "next": "^12.2.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "tailwind-merge": "^1.5.1",
    "urql": "^3.0.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@graphql-codegen/cli": "^2.16.1",
    "@graphql-typed-document-node/core": "^3.1.1",
    "@graphql-codegen/client-preset": "^1.2.3",
    "@svgr/webpack": "^6.3.1",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "autoprefixer": "^10.4.8",
    "concurrently": "^7.6.0",
    "eslint": "^8.20.0",
    "eslint-config-next": "^12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "hasura-cli": "^2.15.1",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.5.0",
    "next-sitemap": "^2.5.28",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "tailwindcss": "^3.1.7",
    "typescript": "^4.7.4",
    "wait-on": "^7.0.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier -w"
    ],
    "src/**/*.{json,css,scss,md}": [
      "prettier -w"
    ]
  }
}
